{% extends 'base.html.twig' %}

{% block title %}Student{% endblock %}

{% block body %}
    <h1>Student</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ student.id }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ student.LastName }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ student.FirstName }}</td>
            </tr>
            <tr>
                <th>MiddleName</th>
                <td>{{ student.MiddleName }}</td>
            </tr>
            <tr>
                <th>EducationalLevel</th>
                <td>{{ student.EducationalLevel }}</td>
            </tr>
            <tr>
                <th>Course</th>
                <td>{{ student.Course }}</td>
            </tr>
            <tr>
                <th>YearSection</th>
                <td>{{ student.YearSection }}</td>
            </tr>
            <tr>
                <th>ContactNo</th>
                <td>{{ student.ContactNo }}</td>
            </tr>
            <tr>
                <th>EmailAddress</th>
                <td>{{ student.EmailAddress }}</td>
            </tr>
            <tr>
                <th>Verified</th>
                <td>{{ student.verified ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>StudentNo</th>
                <td>{{ student.studentNo }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('student_index') }}">back to list</a>

    <a href="{{ path('student_edit', {'id': student.id}) }}">edit</a>

    {{ include('student/_delete_form.html.twig') }}
{% endblock %}
